<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="8dp"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingBottom="8dp"
    android:paddingTop="8dp">

    <ImageView
        android:id="@+id/board_navigation_first_step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp"
        android:src="@drawable/ic_skip_previous_black_24dp"
        app:tint="@color/colorAccent"/>

    <ImageView
        android:id="@+id/board_navigation_previous_step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp"
        android:src="@drawable/ic_navigate_before_black_24dp"
        app:tint="@color/colorAccent"/>

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:background="@drawable/sp_round_accent"
        android:gravity="center"
        android:paddingBottom="6dp"
        android:paddingTop="6dp">

        <ImageView
            android:id="@+id/board_navigation_label_figure"
            android:layout_width="16dp"
            android:layout_height="16dp"
            tools:src="@drawable/ic_figure_pawn_white"
        />

        <TextView
            android:id="@+id/board_navigation_label_cell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="14sp"
            tools:text="e4"
        />

    </LinearLayout>

    <ImageView
        android:id="@+id/board_navigation_next_step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp"
        android:src="@drawable/ic_navigate_next_black_24dp"
        app:tint="@color/colorAccent"/>

    <ImageView
        android:id="@+id/board_navigation_last_step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp"
        android:src="@drawable/ic_skip_next_black_24dp"
        app:tint="@color/colorAccent"/>

</LinearLayout>
